@import "../hotel_list/hotel_list.wxss";

.page {
  background-color: #f2f2f2;
}

.page__bd {
  margin-top: 5px;
  background: white;
}


.weui-grids {
  border-top: 0rpx;
  border-left: 0rpx;
  overflow: hidden;
}

.weui-grid {
  position: relative;
  float: left;
  padding: 10px 10px;
  width: 33.33333333%;
  box-sizing: border-box;
  border-right: 0rpx;
  border-bottom: 0rpx;
}

.weui-grid_active {
  background-color: #ececec;
}

.weui-grid__icon {
  display: block;
  width: 48px;
  height: 48px;
  margin: 0 auto;
}

.weui-grid__label {
  margin-top: 5px;
  display: block;
  text-align: center;
  color: #000;
  font-size: 12px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.hotel {
  margin-top: 5px;
}
.scenic_recommend_head{
  margin-top: 5px;
  background: white;
  display: flex;
  justify-content:center;
  font-size: 16px;
  font-weight: bold;
}

.scenic_recommend {
  flex-direction: row;
  display: flex;
  justify-content:center;
  width: 100%;
  flex-wrap: wrap;
}

.scenic_item {
  justify-content:center;
  width: 50%;
  background-color: white;
  display: flex;
}

.scenic_item image {
  margin-top: 10px;
  width: 100px;
  height: 100px;
}

.scenic_item .content {
  width: 100%;
  height: 32px;
  margin: 5px;
}

.scenic_item .content text {
  font-size: 14px;
  line-height: 16px;
  letter-spacing: 1px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.hotel_recommend_head{
  padding: 5px;
  background: white;
  display: flex;
  font-size: 16px;
  font-weight: bold;
}

