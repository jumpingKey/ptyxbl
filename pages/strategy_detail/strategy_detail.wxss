/* pages/strategy_detail/strategy_detail.wxss */
.container {
  background-color: #fff;
}
.title {
  margin: 5px 15px 5px 15px;
  font-size: 18px;
}

.info {
  margin: 5px 20px 20px 20px;
  display: flex;
}

.info image {
  width: 20px;
  height: 20px;
  padding-right: 5px;
}

.info .read_count, .info .pub_date {
  display: flex;
  width: 50%;
}

.info .pub_date{
  justify-content: center;
}

.read_count text,
.pub_date text{
  align-items: center;
  font-size: 14px;
}

.content{
    margin: 5px 10px 0 15px;
    overflow: hidden;
}
