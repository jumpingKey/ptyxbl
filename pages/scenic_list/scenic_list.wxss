/* pages/scenic_list/scenic_list.wxss */

.container {
  background-color: #f2f2f2;
}

.item {
  padding: 8px 0px 8px 0px;
  width: 100%;
  background-color: #fff;
  color: #787878;
  border-top: 1px solid #eaeaea;
  border-bottom: 1px solid #eaeaea;
  align-items: center;
  justify-content: space-between;
}

.item image {
  display: block;
  width: 108px;
  height: 72px;
  padding-left: 8px;
}

.info {
  flex: 1;
  margin-left: 10px;
  overflow: hidden;
}

.info image {
  width: 20px;
  height: 20px;
  padding-right: 5px;
  padding-left: 0px;
}

.name {
  display: block;
  font-size: 14px;
  color: #333;
  margin-bottom: 2px;
  font-weight: bold;
}

text {
  font-size: 12px;
}

.c666 {
  font-size: 11px;
}

.tag-view text {
  display: inline-block;
  margin-right: 5px;
  margin-bottom: 1px;
  padding: 0 2px 2px 2px;
  height: 15px;
  font-size: 12px;
  color: #999;
  position: relative;
    border: 1px solid #c4c4c4;
  border-radius: 2px;
}

.pub_date {
  margin-top: 5px;
  display: flex; 

}


.pub_date text {
  align-items: center;
  font-size: 12px;
    justify-content: center;
}

.tag-view .tag-3{
  border: 1px solid #337ab7;
  border-radius: 2px;
  color: #337ab7;
}